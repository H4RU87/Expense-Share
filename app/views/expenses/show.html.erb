<div class="page-header">
  <%= link_to expenses_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <h1>Show expense</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @expense.title %></dd>

  <dt>Total amount:</dt>
  <dd><%= @expense.total_amount %></dd>

  <dt>Total person:</dt>
  <dd><%= @expense.total_person %></dd>

  <dt>Comment:</dt>
  <dd><%= @expense.comment %></dd>

</dl>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Person Name</th>
            <th>Responsible amount</th>
            <th>Amount you payed</th>
            <th>Net Amount</th>
      </tr>
    </thead>

    <tbody>
            <% for i in 0..(@expense.bigParticipant.length-1) %>

<% if @expense.bigParticipant[i][2].to_f < 0  %>
<% @string_output = "Pay $#{-1 * @expense.bigParticipant[i][2].to_f.round(2)}" %>
<% elsif @expense.bigParticipant[i][2].to_f > 0  %>
<% @string_output = "Receive $#{@expense.bigParticipant[i][2].to_f}" %>
<% else %>
<% @string_output = "Break Even" %>
<% end %>

            <tr>
            <td><%= @expense.bigParticipant[i][0]%></td>
            <td><%= @expense.responsible_amount %></td>

            <td><%=@expense.bigParticipant[i][1]%></td>
            <td><%= @string_output%></td>
            </tr>
            <% end %>

    </tbody>
  </table>
