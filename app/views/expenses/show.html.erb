<div class="page-header">
  <%= link_to expenses_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <h1>Expense Detail</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @expense.title %></dd>

  <dt>Total Amount:</dt>
  <dd><%= @expense.total_amount %></dd>

  <dt>Total Person:</dt>
  <dd><%= @expense.total_person %></dd>

  <dt>Responsible Amount:</dt>
  <dd><%= @expense.responsible_amount %></dd>

  <dt>Comment:</dt>
  <dd><%= @expense.comment %></dd>
</dl>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Participant</th>
        <th>Responsible Amount</th>
        <th>Paid Amount</th>
        <th>Net Amount</th>
      </tr>
    </thead>

    <tbody>
     <% for i in 0..(@expense.bigParticipant.length-1) %>
        <% if @expense.bigParticipant[i][2].to_f < 0  %>
          <% @string_output = "Receive $#{-1 * @expense.bigParticipant[i][2].to_f.round(2)}" %>
        <% elsif @expense.bigParticipant[i][2].to_f > 0  %>
          <% @string_output = "Pay $#{@expense.bigParticipant[i][2].to_f}" %>
        <% else %>
          <% @string_output = "Break Even" %>
        <% end %>

        <tr>
          <td><%= @expense.bigParticipant[i][0]%></td>
          <td><%= @expense.responsible_amount %></td>
          <td><%=@expense.bigParticipant[i][1]%></td>
          <td><%= @string_output%></td>
        </tr>
     <% end %>
    </tbody>
  </table>
</div>
