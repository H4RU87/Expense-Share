<div class="page-header">
  <%= link_to expenses_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to @expense, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-info-sign"></span>
    Show
  <% end %>
  <h1>Editing expense</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @expense.title %></dd>

  <dt>Total amount:</dt>
  <dd><%= @expense.total_amount %></dd>

  <dt>Total person</dt>
  <dd><%= @expense.total_person %></dd>

</dl>

<%= render 'form2' %>

<button class="btn btn-default" data-toggle="modal" data-target="#myModal">
    Add People
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close"
                   data-dismiss="modal">
                       <span aria-hidden="true">&times;</span>
                       <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    Add People
                </h4>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">

            <% counter = 1 %>
            <% for i in 1..@expense.total_person %>
                <form class="form-horizontal" role="form">
                  <div class="form-group">
                    <label class="col-sm-4 control-label"
                              for="inputEmail3">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control"
                        id="inputText1" placeholder="Name"/>
                    </div>

                    <label class="col-sm-4 control-label"
                              for="inputEmail3">Amount</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control"
                        id="inputText2" placeholder="Amount"/>
                    </div>
                  </div>

                              <% counter += 1 %>
            <% end %>

